{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "types": ["express", "body-parser"]
  },
  "include": ["./src", "src/middleware"],
  "exclude": ["node_modules", "src/tests"]
}
